{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Masterpieces'|trans }}
{% endblock %}

{% block body %}

        <div>
            <h3>
                <a class="nav-link px-2" href="{{ url('masterpiece_create') }}" title="{{ 'action.create'|trans }}">
                    {{ 'utwórz dzieło'|trans }}
                </a>
            </h3>
        </div>
        <br>

    {% if pagination is defined and pagination.items|length %}
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'utworzono'|trans, 'Created') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'zaktualizowano'|trans, 'Updated') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'tytuł'|trans, 'Title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'autor'|trans, 'Author') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'kategoria'|trans, 'Category') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'opis'|trans, 'Description') }}</th>
                <th>{{ ' '|trans }}</th>
                <th>{{ ' '|trans }}</th>
                <th>{{ ' '|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for masterpiece in pagination.items %}
                <tr>
                    <td>{{ masterpiece.createdAt|format_date('long') }}</td>
                    <td>{{ masterpiece.updatedAt|format_date('long') }}</td>
                    <td>{{ masterpiece.title }}</td>
                    <td>{{ masterpiece.author }}</td>
                    <td>{{ masterpiece.category.title }}</td>
                    <td>{{ masterpiece.description }}</td>
                    <td>
                        <a href="{{ url('masterpiece_show', {id: masterpiece.id}) }}" title="{{ 'action.show'|trans }}">
                            {{ 'pokaż dzieło'|trans }}
                        </a>
                    </td>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <td>
                        <a href="{{ url('masterpiece_edit', {id: masterpiece.id}) }}" title="{{ 'action.edit'|trans }}">
                            {{ 'edytuj'|trans }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('masterpiece_delete', {id: masterpiece.id}) }}" title="{{ 'action.delete'|trans }}">
                            {{ 'usuń'|trans }}
                        </a>
                    </td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <br>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'pusta lista'|trans }}
        </p>
    {% endif %}

{% endblock %}