<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{{ 'label.signin'|trans }}{% endblock %}</title>
    {% block stylesheets %}
        <link
                href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
                rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
                crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}
</head>

{% block body %}
    <div class="container">
        <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
            <div class="col-md-3 mt-3 mb-2 mb-md-0">
                <h3 class="d-inline-flex link-body-emphasis text-decoration-none">
                    {{ 'label.masterpieceCatalogue'|trans }}</h3>
            </div>
        </header>
    </div>
    <div class="container">
        <div class="row text-center align-items-center">
            <div class="col">
            </div>
            <div class="col align-self-center my-5">
                <main class="form-signin w-20 m-auto">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                {{ 'label.youAreLoggedIn'|trans }} {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">{{ 'label.signout'|trans }}</a>
                            </div>
                        {% endif %}

                        {# please, sign in #}
                        <h1 class="h3 mb-3 fw-normal">{{ 'label.pleaseSignIn'|trans }}</h1>
                            {# email #}
                            <div class="pt-4">
                                <div><label class="login  ml-5" for="inputEmail">{{ 'label.email'|trans }}</label></div>
                                <div><input type="email" value="{{ last_username }}" name="email" class="form-control" name="email"  id="inputEmail" autocomplete="email" required autofocus>
                                </div>
                            </div>
                            {# password #}
                            <div class="pt-4 pb-4">
                                <div><label class="login  ml-5">{{ 'label.password'|trans }}</label></div>
                                <div><input type="password" name="password" id="inputPassword" class="form-control"  autocomplete="current-password" required></div>
                            </div>
                            {# authentication #}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            {# "sign in" #}
                            <button type="submit" class="btn btn-primary w-100 p-3" type="submit">{{ 'label.signin'|trans }}</button>
                    </form>
                </main>
            </div>
            <div class="col">
            </div>
        </div>
    </div>

{% endblock %}
