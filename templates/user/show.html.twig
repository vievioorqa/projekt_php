{% extends 'base.html.twig' %}

{% block title %}
    {{ 'label.user_details'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'label.user_details'|trans({'%id%': user.id|default('')}) }}</h1>
	<br>
    {% if user is defined and user|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.email'|trans }}</dt>
            <dd>{{  user.email }}</dd>
        </dl>
		
        <p>
            <a href="{{ url('user_editEmail', {id: user.id}) }}" title="{{ 'action.edit_email'|trans }}" class="{{ 'btn btn-primary' }}">
                {{ 'action.edit_email'|trans }}
            </a>
            <a href="{{ url('user_editPassword', {id: user.id}) }}" title="{{ 'action.edit_password'|trans }}" class="{{ 'btn btn-primary' }}">
                {{ 'action.edit_password'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}